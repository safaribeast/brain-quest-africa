rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);

      // Question history subcollection
      match /questionHistory/{questionId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Game sessions
    match /games/{gameId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;
    }
    
    // Questions
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Progress tracking
    match /progress/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Game Results (Leaderboard)
    match /gameResults/{resultId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Leaderboard
    match /leaderboard/{entryId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    
    // Helper function to check admin status
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email in [
               'safaribeast01@gmail.com',
               'muhsinadam38@gmail.com',
               'charlesnyerere17@gmail.com',
               'rahimmnaro@gmail.com'
             ];
    }
  }
} 